<% if (errors.length > 0) { %>
  <div class="row">
      <div class="col my-3">
          <div class="alert alert-danger" id="frontendvalidation">
              <% errors.forEach(function(error) { %>
                  <%= error %> <br />
              <% }); %>
          </div>
      </div>
  </div>
<% } else { %>
  <% if (success.length > 0) { %>
      <div class="row">
          <div class="col my-3">
              <div class="alert alert-success" id="frontendvalidation">
                  <% success.forEach(function(succ) { %>
                      <%= succ %> <br />
                  <% }); %>
              </div>
          </div>
      </div>
  <% } else { %>
      <div class="alert d-{none} m-0 p-0" id="frontendvalidation">
      </div>
  <% } %>
<% } %>
